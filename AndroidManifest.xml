<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.savanto.andict"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission 
        android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >

        <activity
            android:name="com.savanto.andict.DictActivity"
            android:label="@string/dict_activity"
            android:configChanges="orientation"
			android:theme="@style/DictActivityTheme" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        
        <activity
            android:name="com.savanto.andict.DictSettingsActivity"
            android:label="@string/dict_settings"
			android:theme="@style/DictSettingsTheme" >
        </activity>

    </application>
</manifest>